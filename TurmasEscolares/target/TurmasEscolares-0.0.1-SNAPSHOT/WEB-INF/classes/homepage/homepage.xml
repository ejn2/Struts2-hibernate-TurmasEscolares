<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <package name="turma" namespace="/" extends="struts-default">
		
		<default-action-ref name="index"/>
		
		<action name="home" class="com.turma.controller.MainController" method="homePage">
			<result name="success">WEB-INF/index.jsp</result>
		</action>
		
		<action name="register" class="com.turma.controller.MainController" method="register">
			<result name="success">WEB-INF/form/form.jsp</result>
		</action>

    </package>
</struts>
